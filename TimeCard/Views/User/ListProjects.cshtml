<script>
    function AddLockDate()
    {
        $('#loading-image').show();

        $.ajax({
            type: 'POST',
            url: "../User/GetProjectLockDate",
            dataType: "json",
            //data: {
            //    Id: id
            //},
            success: function (response)
            {
                if (response.IsLocked == null)
                {
                    //$('#addId').val(response.Id);
                    $('#addDate').val("");
                    $('#addIsRemove').val(0);

                    $('#btnUnlock').attr("disabled", true);

                    $('#addDateModal').modal('toggle');
                }
                else
                {
                    //$('#addId').val(response.Id);
                    $('#addIsRemove').val(0);
                    $('#addDate').val(response.IsLocked);

                    $('#btnUnlock').attr("disabled", false);

                    $('#addDateModal').modal('toggle');
                }

            },
            complete: function () {
                $('#loading-image').hide();
            },
            error: function () {
                $('#loading-image').hide();
                alert("ajax Failed");
            }
        });      
    }

    function removeLockDate() {
        $('#addIsRemove').val(1);
    }

    $("#btnSubmit").click(function () {
        $('#addIsRemove').val(0);
    });
</script>
