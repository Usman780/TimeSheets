@using TimeCard.Models
@using TimeCard.Helping_Classes
@using TimeCard.BL
@{
    SessionDTO sdto = new SessionDTO();
}

@{
    ViewBag.Title = "Dashboard";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<style>
    .square {
        background: #F2F2F2;
        width: 100%;
        height: 100%;
    }

    h1, h2 {
        color: #2a2b6e;
    }

    p {
        color: #5dba47 !important;
    }
</style>

<strong class="text-danger">@ViewBag.Message</strong>
<div class="row">
    <h1><strong>Dashboard</strong></h1>
</div>

@if (sdto.getRole() == 1)
{
    <div class="row">
        <div class="col-lg-offset-3 col-lg-3 col-md-offset-3 col-md-3 col-xs-6">
            <div class="square">
                <br /><br />
                <center><p><strong>Assigned Employees</strong></p></center>
                <br />
                <center><h2>@ViewBag.assignedemployees</h2></center>
            </div>
        </div>
        <div class="col-lg-3 col-md-3 col-xs-6">
            <div class="square">
                <br /><br />
                <center><p><strong>Total Pending Timecards</strong></p></center>
                <br />
                <center><h2>@ViewBag.pendingcard</h2></center>
            </div>
        </div>
    </div>

    if(ViewBag.assignedprojects != 0)
    { 
        <div class="row">
            <div class="col-md-3"></div>
            <div class="col-lg-3">
                <div class="square">
                    <br /><br />
                    <center><p><strong>Total Assigned Projects</strong></p></center>
                    <br />
                    <center><h2>@ViewBag.assignedprojects</h2></center>
                </div>
            </div>
        </div>
    }
}
else
{
    <div class="row">
        <div class="col-lg-offset-3 col-lg-3 col-md-offset-3 col-md-3 col-xs-6">
            <div class="square">
                <br /><br />
                <center><p><strong>Total Employees</strong></p></center>
                <br />
                <center><h2>@ViewBag.totalemployees</h2></center>
            </div>
        </div>
        <div class="col-lg-3 col-md-3 col-xs-6">
            <div class="square">
                <br /><br />
                <center><p><strong>Total Managers</strong></p></center>
                <br />
                <center><h2>@ViewBag.totalmanagers</h2></center>
            </div>
        </div>
    </div>
    <br />
    <br />

    <div class="row">
        <div class="col-lg-offset-3 col-lg-3 col-md-offset-3 col-md-3 col-xs-6">
            <div class="square">
                <br /><br />
                <center><p><strong>Total Removed Employees</strong></p></center>
                <br />
                <center><h2>@ViewBag.totalRemovedemployees</h2></center>
            </div>
        </div>
        <div class="col-lg-3 col-md-3 col-xs-6">
            <div class="square">
                <br /><br />
                <center><p><strong>Total Removed Managers</strong></p></center>
                <br />
                <center><h2>@ViewBag.totalRemovedmanagers</h2></center>
            </div>
        </div>
    </div>

    <br />
    <br />
    <div class="row">
        <div class="col-lg-offset-3 col-lg-3 col-md-offset-3 col-md-3 col-xs-6">
            <div class="square">
                <br /><br />
                <center><p><strong>Total Projects</strong></p></center>
                <br />
                <center><h2>@ViewBag.totalprojects</h2></center>
            </div>
        </div>
        <div class="col-lg-3 col-md-3 col-xs-6">
            <div class="square">
                <br /><br />
                <center><p><strong>Total Accepted Time Cards</strong></p></center>
                <br />
                <center><h2>@ViewBag.totalacceptedtimecards</h2></center>
            </div>
        </div>
    </div>
}