
@{
    ViewBag.Title = "TimeCardMail";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<br /><br /><br />
<br />

<div class="row" style="background-color:#0005A7; border:3px solid #54FF00; color:white; padding:20px;">
    <h1>Entry Time Deatils:</h1>

    <div class="col-md-3">
        <h3><strong>Project Code </strong>: @ViewBag.e.Project.Code</h3>
    </div>
    <div class="col-md-3">
        <h3><strong>User Name </strong>: @ViewBag.e.User.FirstName&nbsp;@ViewBag.e.User.LastName</h3>
    </div>
    <div class="col-md-2">
        <h3><strong>Date </strong>: @ViewBag.e.Date.ToString("MM/dd/yyyy")</h3>
    </div>
    <div class="col-md-2">
        <h3><strong>Hours </strong>: @ViewBag.e.Hour</h3>
    </div>
</div>
<br />
<div class="row">
    <center>
        <a class="btn btn-lg btn-success" href="@Url.Action("ToggleTimeCard","Home", new { Id = ViewBag.e.Id, option = 1 })">Accept</a>&nbsp;&nbsp;<a class="btn btn-lg btn-danger" onclick="reasonEntry(@ViewBag.e.Id)" data-toggle="modal" data-target="#reasonModal">Decline</a>
    </center>
</div>

  <!-- Delete Modal -->
<div class="modal fade" id="reasonModal" role="dialog">
    <div class="modal-dialog">
        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title"><strong>Reason</strong></h4>
            </div>
            <form class="form-horizontal form-label-left" method="post" action="@Url.Action("ToggleTimeCard", "Home", new { Id = ViewBag.e.Id, option = 0 })">
                <input type="hidden" name="Id" id="entryId" />
                <div class="modal-body">
                   <textarea class="form-control" rows="4" name="reason"></textarea>
                </div>
                <div class="modal-footer">
                    <button type="submit" class="btn btn-primary">Submit</button>
                </div>
            </form>
        </div>
    </div>
</div>

<script type="text/javascript">
                function reasonEntry(Id) {
                    $('#entryId').val(Id);
                }
</script>

